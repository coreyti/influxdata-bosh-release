#!/usr/bin/env bash

RUN_DIR=/var/vcap/sys/run/influxdata-kapacitor
LOG_DIR=/var/vcap/sys/log/influxdata-kapacitor
CONF_DIR=/var/vcap/jobs/influxdata-kapacitor/config
PIDFILE=$RUN_DIR/pid

case $1 in
  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap /var/vcap/packages/influxdata-kapacitor/usr/bin/kapacitor \
      -configPath=/var/vcap/jobs/influxdata-kapacitor/config/kapacitor.config \
      1>>$LOG_DIR/stdout.log \
      2>>$LOG_DIR/stderr.log
    ;;

  stop)
    if [ -f $PIDFILE ]; then
      kill -9 $(cat $PIDFILE) || true
      rm -f $PIDFILE
    fi
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    ;;
esac
